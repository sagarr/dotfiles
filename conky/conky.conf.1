background yes
use_xft yes
xftfont FreeSans:bold:size=10
xftalpha 1
update_interval 1.0
total_run_times 0
own_window yes
own_window_class Conky
own_window_type dock
#own_window_type desktop
own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
double_buffer yes
minimum_size 250 250
maximum_width 250
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders nodename
default_color red
default_shade_color black
default_outline_color white
alignment top_right
gap_x 15
gap_y 35
no_buffers yes
uppercase no
cpu_avg_samples 8
override_utf8_locale no

color1 FCD868
# color1 red

TEXT
# Clock
${color FFA300}${font GE Inspira:pixelsize=48}${time %I:%M}${font}${color FF3300}
${font GE Inspira:pixelsize=28}${time %d} ${color FF3300}${font GE Inspira:pixelsize=20}${time %B} ${time %Y}${font}
${font GE Inspira:pixelsize=18}${time %A}${font}

# SYSTEM
${font FreeSans:Bold:size=10}${color1}SYSTEM ${hr 2}$color${font}
O.S. $alignr Ubuntu 16.04
Hostname $alignr $nodename
$sysname $kernel $alignr $machine
Uptime $alignr $uptime

# CPU
${font FreeSans:Bold:size=10}${color1}CPU ${hr 2}
$color${font}${execi 100000 cat /proc/cpuinfo | grep -m 1 'model name' | sed -e 's/model name.*: //' | sed -e 's/(tm)//'}

${font}Core 1: ${cpu cpu1}%$alignc${color1}${cpubar cpu1 10}${color}
${font}Core 2: ${cpu cpu2}%$alignc${color1}${cpubar cpu2 10}${color}
${font}Core 3: ${cpu cpu3}%$alignc${color1}${cpubar cpu3 10}${color}
${font}Core 4: ${cpu cpu4}%$alignc${color1}${cpubar cpu4 10}${color}
${font}Core 5: ${cpu cpu5}%$alignc${color1}${cpubar cpu5 10}${color}
${font}Core 6: ${cpu cpu6}%$alignc${color1}${cpubar cpu6 10}${color}
${font}Core 7: ${cpu cpu7}%$alignc${color1}${cpubar cpu7 10}${color}
${font}Core 8: ${cpu cpu8}%$alignc${color1}${cpubar cpu8 10}${color}

# RISORSE
${font FreeSans:Bold:size=10}${color1}TOP ${hr 2}
$color${font FreeSans:bold:size=9}PROCESS $alignr CPU$font

${top name 1}${alignr}${top cpu 1} %
${top name 2}${alignr}${top cpu 2} %
${top name 3}${alignr}${top cpu 3} %
${top name 4}${alignr}${top cpu 4} %
${top name 5}${alignr}${top cpu 5} %

# MEMORIA
${font FreeSans:Bold:size=10}${color1}MEMORY ${hr 2}
$color${font FreeSans:bold:size=9}RAM$font
$mem / $memmax $alignr $memperc %
${color1}${membar 10}${color}

${font FreeSans:bold:size=9}SWAP$font
$swap / $swapmax $alignr $swapperc
${color1}${swapbar 10}${color}

${top_mem name 1} ${alignr}${top_mem mem_res 1}
${top_mem name 2} ${alignr}${top_mem mem_res 2}
${top_mem name 3} ${alignr}${top_mem mem_res 3}
${top_mem name 4} ${alignr}${top_mem mem_res 4}

# DISCHI
${font FreeSans:Bold:size=10}${color1}DISK${hr 2}
$color${font FreeSans:bold:size=9}Root $font
${fs_used /} / ${fs_size /} $alignr ${fs_used_perc /} %
${color1}${fs_bar 10 /}${color}
$color${font FreeSans:bold:size=9}Home $font
${fs_used /home} / ${fs_size /home} $alignr ${fs_used_perc /} %
${color1}${fs_bar 10 /}${color}

# NETWORK
${font FreeSans:Bold:size=10}${color1}NETWORK ${hr 2}
$color${font FreeSans:bold:size=9}Local $font$alignr ${addr wlp2s0}
$color${font FreeSans:bold:size=9}Public $font$alignr ${execi 3600 wget -q -O /dev/stdout http://checkip.dyndns.org/ | cut -d : -f 2- | cut -d \< -f -1}

Down $alignr ${downspeedf wlp2s0} kb/s
${color1}${downspeedgraph wlp2s0 10}${color}
Down Total $alignr ${totaldown wlp2s0}

Up $alignr ${upspeedf wlp2s0} kb/s
${color1}${upspeedgraph wlp2s0 10}${color}
Up Total $alignr ${totalup wlp2s0}


